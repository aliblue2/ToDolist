<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootDetailTask"
    android:layoutDirection="rtl"
    android:background="#f7f7f7"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="@drawable/bacappbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignStart= "@+id/btnBackDetail"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:text="اضافه / ویرایش تسک "
                android:id="@+id/tvdetailTask"/>
            <ImageView
                android:id="@+id/btnBackDetail"
                android:layout_width="32dp"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:layout_height="32dp"
                android:src="@drawable/ic_back_black_24dp"
                android:rotation="180"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/icDeleteDetail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_delete_24dp"
                android:tint="@color/white" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <FrameLayout
                android:id="@+id/importanceHigh"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape_outline"
                android:layout_marginStart="8dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="خیلی مهم "
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:textSize="16sp"
                    android:textColor="@color/carbon"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:id="@+id/importanceHighIv"
                    android:background="@drawable/shape_circle_high"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="12dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/importancenormal"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_outline"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="معمولی"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:textSize="16sp"
                    android:textColor="@color/carbon"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:id="@+id/importanceNormalIv"
                    android:src="@drawable/ic_check_white_24dp"
                    android:background="@drawable/shape_circle_normal"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="12dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/importanceLow"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape_outline"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پایین "
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:textSize="16sp"
                    android:textColor="@color/carbon"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:id="@+id/importanceLowIv"
                    android:background="@drawable/shape_circle_low"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="12dp"
                    />
            </FrameLayout>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:id="@+id/etTittleTask"
            android:background="@drawable/bacedittitle"
            android:gravity="top|center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/carbon"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColorHint="@color/carbon"
            android:hint="عنوان تسک را وارد کیند"/>
    </FrameLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveChanges"
        android:layout_gravity="bottom|center_horizontal"
        android:text="ذخیره تغییرات"
        app:icon="@drawable/ic_circle_done_white_24dp"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:textStyle="bold"
        android:textSize="14sp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>